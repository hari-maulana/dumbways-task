  <h2 class="title text-center mt-5">ADD MY PROJECT</h2>

  <div class="container d-flex justify-content-center">

    <form class="col-md-8">
      <div class="mb-3">
        <label for="input-project" class="form-label">Project Name</label>
        <input type="text" class="form-control" id="input-project" name="project-name" aria-describedby="">
      </div>

      <!-- date -->
      <div class="row justify-content-between">
        <div class="mb-3 col-md-5">
          <label for="start-date" class="form-label">Start Date</label>
          <input type="date" class="form-control" id="start-date" name="start-date" aria-describedby="">
        </div>

        <div class="mb-3 col-md-5">
          <label for="end-date" class="form-label">End Date</label>
          <input type="date" class="form-control" id="end-date" name="end-date" aria-describedby="">
        </div>

      </div>

      <div class="mb-3">
        <label for="input-description" class="form-label">Description</label>
        <textarea id="input-description" class="form-control" style="height: 16rem; resize: none;"></textarea>
      </div>

      <!-- CHECKBOXES -->
      <label class="form-check-label mb-3" for="checkbox-container">Technologies</label>
      <div class="container row mb-3" id="checkbox-container">

        <div class="col-sm-6">
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="node-js">
            <label class="form-check-label" for="node-js">Node JS</label>
          </div>

          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="react-js">
            <label class="form-check-label" for="react-js">React JS</label>
          </div>
        </div>

        <div class="col-sm-6">
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="next-js">
            <label class="form-check-label" for="next">Next JS</label>
          </div>

          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="typescript">
            <label class="form-check-label" for="typescript">TypeScript</label>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="input-image">Upload Images</label>
        <input type="file" class="form-control" id="input-image" name="input-image" />
      </div>
      <div class="d-flex justify-content-end mb-5">
        <button type="submit" class="btn btn-danger">Submit</butto>n
      </div>
    </form>
  </div>





