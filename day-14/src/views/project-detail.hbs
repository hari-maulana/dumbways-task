    <script>
    var timeElements = document.querySelectorAll('#startDate, #endDate')

    timeElements.forEach(function (timeElements) {
      var origin = timeElements.textContent.trim()
      var date = new Date(origin)
      var option = { day: 'numeric', month: 'long', year: 'numeric' }
      var formateDate = date.toLocaleString('en-ID', option)
      timeElements.textContent = formateDate
    })

    var durationElements = document.querySelectorAll('#duration');
    durationElements.forEach(function (durationElement) {
      var durationValue = parseInt(durationElement.textContent.trim(), 10); // agar membuat jadi integer yang berbasis desimal

      var inWeeks = Math.floor(durationValue / 7);
      var inMonth = Math.floor(durationValue / 30);

      console.log(inWeeks)
      console.log(inMonth)



      if (durationValue >= 30) {
        durationElement.textContent = `${inMonth} month(s)`;
      } else if (durationValue >= 7) {
        durationElement.textContent = `${inWeeks} week(s)`;
      } else {
        durationElement.textContent = `${durationValue} day(s)`
      }
    });


  </script>

